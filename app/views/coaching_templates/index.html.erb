<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All coachings
    </h1>

    <a href="/coachings/new" class="btn btn-block btn-outline-secondary">
      Add a new coaching
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "coaching_templates/coachings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Improvement plan
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @coachings.each do |coaching| %>
      <tr>
        <td>
          <%= coaching.id %>
        </td>

        <td>
          <% if coaching.implementation_plan.present? %>
            <a href="/improvement_plans/<%= coaching.implementation_plan.id %>">
              <%= coaching.implementation_plan.description %>
            </a>
          <% end %>
        </td>

        <td>
          <% if coaching.user.present? %>
            <a href="/users/<%= coaching.user.id %>">
              <%= coaching.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(coaching.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(coaching.updated_at) %> ago
        </td>

        <td>
          <a href="/coachings/<%= coaching.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @coachings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
