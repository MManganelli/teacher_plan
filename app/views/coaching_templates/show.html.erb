<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Coaching #<%= @coaching.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/coachings" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/coachings/<%= @coaching.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit coaching
        </a>
      </div>

      <div class="col">
        <a href="/delete_coaching/<%= @coaching.id %>" class="btn btn-block btn-outline-secondary">
          Delete coaching
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Improvement plan
      </dt>
      <dd>
        <% if @coaching.implementation_plan.present? %>
          <a href="/improvement_plans/<%= @coaching.improvement_plan_id %>">
            <%= @coaching.implementation_plan.description %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @coaching.user.present? %>
          <a href="/users/<%= @coaching.user_id %>">
            <%= @coaching.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@coaching.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@coaching.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

