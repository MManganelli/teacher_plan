<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All actions
    </h1>

    <a href="/actions/new" class="btn btn-block btn-outline-secondary">
      Add a new action
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "action_templates/actions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Target date
        </th>

        <th>
          Lead person
        </th>

        <th>
          Resources needed
        </th>

        <th>
          Implementation specifics
        </th>

        <th>
          Measure success
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @actions.each do |action| %>
      <tr>
        <td>
          <%= action.id %>
        </td>

        <td>
          <%= action.target_date %>
        </td>

        <td>
          <%= action.lead_person %>
        </td>

        <td>
          <%= action.resources_needed %>
        </td>

        <td>
          <%= action.implementation_specifics %>
        </td>

        <td>
          <%= action.measure_success %>
        </td>

        <td>
          <% if action.goal.present? %>
            <a href="/goals/<%= action.goal.id %>">
              <%= action.goal.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(action.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(action.updated_at) %> ago
        </td>

        <td>
          <a href="/actions/<%= action.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @actions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
