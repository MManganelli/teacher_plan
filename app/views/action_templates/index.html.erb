<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All actions
    </h1>

    <a href="/actions/new" class="btn btn-block btn-outline-secondary">
      Add a new action
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Target date
        </th>

        <th>
          Lead person
        </th>

        <th>
          Resources needed
        </th>

        <th>
          Implementation specifics
        </th>

        <th>
          Measure success
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @actions.each do |action| %>
      <tr>
        <!-- Display action.id start -->
        <td>
          <%= action.id %>
        </td>
        <!-- Display action.id end -->

        <!-- Display action.target_date start -->
        <td>
          <%= action.target_date %>
        </td>
        <!-- Display action.target_date end -->

        <!-- Display action.lead_person start -->
        <td>
          <%= action.lead_person %>
        </td>
        <!-- Display action.lead_person end -->

        <!-- Display action.resources_needed start -->
        <td>
          <%= action.resources_needed %>
        </td>
        <!-- Display action.resources_needed end -->

        <!-- Display action.implementation_specifics start -->
        <td>
          <%= action.implementation_specifics %>
        </td>
        <!-- Display action.implementation_specifics end -->

        <!-- Display action.measure_success start -->
        <td>
          <%= action.measure_success %>
        </td>
        <!-- Display action.measure_success end -->

        <!-- Display action.goal_id start -->
        <td>
          <% if action.goal.present? %>
            <a href="/goals/<%= action.goal.id %>">
              <%= action.goal.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display action.goal_id end -->

        <!-- Display action.created_at start -->
        <td>
          <%= time_ago_in_words(action.created_at) %> ago
        </td>
        <!-- Display action.created_at end -->

        <!-- Display action.updated_at start -->
        <td>
          <%= time_ago_in_words(action.updated_at) %> ago
        </td>
        <!-- Display action.updated_at end -->

        <td>
          <a href="/actions/<%= action.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @actions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
