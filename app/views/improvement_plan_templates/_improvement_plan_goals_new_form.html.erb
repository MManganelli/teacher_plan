<!-- Form goal start -->
<form action="/create_goal_from_improvement_plan" method="post">
<!-- Form goal end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @goal.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for imprevement_plan_id start -->
  <!-- Input for imprevement_plan_id start -->
  <input type="hidden" name="imprevement_plan_id" value="<%= @improvement_plan.id %>">
  <!-- Input for imprevement_plan_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>
