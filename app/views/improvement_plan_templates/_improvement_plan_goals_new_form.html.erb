<form action="/create_goal_from_improvement_plan" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @goal.user_id %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
  </div>

  <input type="hidden" name="imprevement_plan_id" value="<%= @improvement_plan.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>
