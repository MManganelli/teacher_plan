<!-- Form coaching start -->
<form action="/create_coaching_from_improvement_plan" method="post">
<!-- Form coaching end -->

  <!-- Label and input for improvement_plan_id start -->
  <!-- Input for improvement_plan_id start -->
  <input type="hidden" name="improvement_plan_id" value="<%= @improvement_plan.id %>">
  <!-- Input for improvement_plan_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @coaching.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create coaching
  </button>
</form>
