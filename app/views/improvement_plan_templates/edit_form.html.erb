<h1>
  Edit improvement plan #<%= @improvement_plan.id %>
</h1>

<hr>

<!-- Form improvement_plan start -->
<form action="/update_improvement_plan/<%= @improvement_plan.id %>" method="post">
<!-- Form improvement_plan end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @improvement_plan.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for user_id start -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for status_id start -->
  <div class="form-group">
    <label for="status_id">
      Status
    </label>

    <!-- Input for status_id start -->
    <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :status, @improvement_plan.status_id), :class => "form-control") %>
    <!-- Input for status_id end -->
  </div>
  <!-- Label and input for status_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update improvement plan
  </button>
</form>

<hr>

<a href="/improvement_plans">
  Go back
</a>
