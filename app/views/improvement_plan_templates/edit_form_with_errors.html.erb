<% if @improvement_plan.errors.any? %>
  <% @improvement_plan.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit improvement plan #<%= @improvement_plan.id %>
</h1>

<hr>

<form action="/update_improvement_plan/<%= @improvement_plan.id %>" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @improvement_plan.description %>">
  </div>


  <div class="form-group">
    <label for="status_id">
      Status
    </label>

    <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :status, @improvement_plan.status_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update improvement plan
  </button>
</form>

<hr>

<a href="/improvement_plans">
  Go back
</a>
