<h1>
  Add a new improvement plan
</h1>


<hr>

<form action="/create_improvement_plan" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="status_id">
      Status
    </label>

    <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :status, @improvement_plan.status_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create improvement plan
  </button>
</form>

<hr>

<a href="/improvement_plans">
  Go back
</a>
