<h1>
  Add a new improvement plan
</h1>


<hr>

<!-- Form improvement_plan start -->
<form action="/create_improvement_plan" method="post">
<!-- Form improvement_plan end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for status_id start -->
  <div class="form-group">
    <label for="status_id">
      Status
    </label>

    <!-- Input for status_id start -->
    <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :status, @improvement_plan.status_id), :class => "form-control") %>
    <!-- Input for status_id end -->
  </div>
  <!-- Label and input for status_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create improvement plan
  </button>
</form>

<hr>

<a href="/improvement_plans">
  Go back
</a>
