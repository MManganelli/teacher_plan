<h1>
  Add a new goal
</h1>


<hr>

<!-- Form goal start -->
<form action="/create_goal" method="post">
<!-- Form goal end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for imprevement_plan_id start -->
  <div class="form-group">
    <label for="imprevement_plan_id">
      Imprevement plan
    </label>

    <!-- Input for imprevement_plan_id start -->
    <%= select_tag(:imprevement_plan_id, options_from_collection_for_select(ImprovementPlan.all, :id, :description, @goal.imprevement_plan_id), :class => "form-control") %>
    <!-- Input for imprevement_plan_id end -->
  </div>
  <!-- Label and input for imprevement_plan_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>

<hr>

<a href="/goals">
  Go back
</a>
