<% if @goal.errors.any? %>
  <% @goal.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit goal #<%= @goal.id %>
</h1>

<hr>

<form action="/update_goal/<%= @goal.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @goal.user_id %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
  </div>

  <div class="form-group">
    <label for="imprevement_plan_id">
      Imprevement plan
    </label>

    <%= select_tag(:imprevement_plan_id, options_from_collection_for_select(ImprovementPlan.all, :id, :description, @goal.imprevement_plan_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update goal
  </button>
</form>

<hr>

<a href="/goals">
  Go back
</a>
